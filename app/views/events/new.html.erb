<div class="div_text_centered">
<h2>Create your new event here!</h2>
<div>
  <form action= <%= events_path %> method="POST" >
    <div class ="form-group">
      <%# <label for="exampleInputEmail1">Create un event !</label><br> %>
      <input type="hidden" name="authenticity_token" placeholder="Your comment" value="<%= form_authenticity_token %>">
      
      <label>Titre de l'événement</label>
      <input type="text" id="title" name="title" class="form-control" placeholder ="C'est quoi son petit nom"><br/>

      <label>Start de l'événement</label>
      <input type="text" id="start_date" name="start_date" class="form-control" placeholder ="dd/mm/yy"><br/>
      
      <label>Durée de la fiesta </label>
      <input type="text" id="duration" name="duration" class="form-control" placeholder ="Pendant combien de minutes on va s'amuser"><br/>
      
      <label>Déscription de l'événement</label>
      <textarea id="description" name="description" class="form-control" placeholder ="Dis nous en plus"></textarea><br/>
      
      <label>Endroit</label>
      <input type="text" id="location" name="location" class="form-control" placeholder ="Lyon plus belle ville du monde ;)"><br/>
    
      <label>Tarif bis</label>
      <select type="text" id="price" name="price" class="form-control" placeholder ="En dinar stp"><br/>
      <option value="10">10 €</option>
      <option value="20">20 €</option>
      <option value="30">30 €</option>
      <option value="40">40 €</option>
      <option value="50">50 €</option>
      </select><br/>
      <div><br/>

    

    <input type="submit" value="Valider" class ="btn btn-primary">

  </form>
</div>